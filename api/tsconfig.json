{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",              // ← MUDANÇA: ES2022 em vez de CommonJS
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"],
      "@/lib/*": ["../lib/*"]
    },
    "allowImportingTsExtensions": false
  },
  "include": ["**/*.ts", "../lib/**/*.ts"],
  "exclude": ["node_modules", "**/create-payment-backup.ts", "**/create-payment-final.ts"]
}
